<%- layout("layout/boilerplate") %>
<%- include("../includes/filter.ejs") %>
<body>
     <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
        <% for(let listing of allListing){ %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%=listing.image.url%>" class="card-img-top mb-1" alt="Listing_image" style="height: 20rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text">
                  <b>Hosted By: <%=listing.owner.username %></b><br>
                  <span style="font-weight: 550;"><%=listing.location %>,<%=listing.country %>
                  <br>
                  &#8377; <%= listing.price.toLocaleString("en-IN") %>/ night </span>
                </p>
              </div>
            </div>
          </a>
        <% } %> 
     </div> 
</body>


