<%- layout("layout/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create new Listening</h3>
    <form method="post" action="/listings" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="Enter Title" name="title" id="text" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="description" placeholder="Enter a short Description" id="description" class="form-control" required></textarea>
        </div>

    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <div class="input-group">
                <div class="input-group-text">&#8377</div>
                <input type="number" placeholder="Enter Price" name="price" id="price" class="form-control" required>
            </div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="category" class="form-label">Category</label>
            <select name="category" class="form-select" id="Category" size="1" required>
                <option style="display:none;" value="" selected >Select Category</option>
                <option value="trending">Trending</option>
                <option value="room">Room</option>
                <option value="iconic-citie">Iconic Citie</option>
                <option value="mountain">Mountain</option>
                <option value="castle">Castle</option>
                <option value="pool">Swimming Pool</option>
                <option value="camping">Camping</option>
                <option value="arctic">Arctic</option>
                <option value="farm">Farm</option>
                <option value="dome">Dome</option>
                <option value="boat">Boat</option>
            </select>
        </div>
    </div>

    

        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="country" class="form-label">Country</label>
                <input type="text" placeholder="India" name="country" id="country" class="form-control" required>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" placeholder="Jaipur,Rajasthan" name="location" id="location" class="form-control" required>
            </div>
        </div>

        <div class="mb-4">
            <label for="image" class="form-label">Image Link</label>
            <input type="file" placeholder="Upload the file" name="image" id="image" class="form-control" required>
        </div>
        
        <button class="btn btn-dark add-btn mt-1 mb-5">ADD</button>
        
    </form>
    </div>
</div>
    


